        <JFXButton layoutX="19.0" layoutY="161.0" onAction="#btnOderDetailsOnAction" text="PURCHASE ORDER" textFill="WHITE" />
        <JFXButton layoutX="19.0" layoutY="200.0" onAction="#btnAddOrderOnAction" text="CREATE ORDER" textFill="WHITE">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </JFXButton>
        <JFXButton layoutX="56.0" layoutY="490.0" text="ABOUT" textFill="WHITE" />

        <!-- Table -->
        <TableView fx:id="tblOder" layoutX="220.0" layoutY="193.0" prefHeight="302.0" prefWidth="554.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="100.0" text="Order Id" />
                <TableColumn fx:id="colName" prefWidth="130.0" text="Item Name" />
                <TableColumn fx:id="colQty" prefWidth="80.0" text="Qty" />
                <TableColumn fx:id="colUnitPrice" prefWidth="110.4000244140625" text="Price" />
                <TableColumn fx:id="colTotal" prefWidth="131.99997558593748" text="Total" />
            </columns>
        </TableView>

        <!-- Top labels and fields -->
        <Label fx:id="lblCM" layoutX="387.0" layoutY="11.0" text="CREATE ORDER FORM">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>

        <ComboBox fx:id="cmbCustomerID" layoutX="220.0" layoutY="71.0" prefWidth="150.0" />
        <Label fx:id="lblCustomerName" layoutX="410.0" layoutY="75.0" text="Customer" />
        <Label fx:id="lblCustomerPhoneNumber" layoutX="487.0" layoutY="74.0" text="Phone Number" />

        <ComboBox fx:id="cmbItemId" layoutX="220.0" layoutY="121.0" prefWidth="150.0" />
        <Label fx:id="lblItemName" layoutX="410.0" layoutY="125.0" text="Item" />
        <Label fx:id="lblStock" layoutX="582.0" layoutY="124.0" text="Stock" />
        <Label fx:id="lblUnityPrice" layoutX="488.0" layoutY="125.0" text="Unit Price" />
        <JFXTextField fx:id="txtQtyOnHand" layoutX="656.0" layoutY="120.0" prefHeight="26.0" prefWidth="81.0" promptText="Qty On Hand" />

        <!-- Action buttons -->
        <JFXButton fx:id="btnAdd" layoutX="480.0" layoutY="162.0" onAction="#btnAddToCartOnAction" text="Add to Cart" />
        <JFXButton fx:id="btnClear" layoutX="713.0" layoutY="159.0" onAction="#btnClearOnAction" text="Clear" />
        <JFXButton fx:id="btnDelete" layoutX="645.0" layoutY="161.0" onAction="#btnDeleteOnAction" text="Delete" />

        <!-- Net total and place order -->
        <Label fx:id="lblCM1" layoutX="223.0" layoutY="504.0" text="Net Total:">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <JFXButton fx:id="btnSearch" layoutX="692.0" layoutY="501.0" onAction="#btnPlaceOrdrOnAction" style="-fx-background-color: #2ecc71;" text="Place Order" />
        <Label fx:id="lblNetTotal" layoutX="292.0" layoutY="504.0" text="Net Total:">
            <font>
                <Font name="System Bold" size="15.0" />
            </font>
        </Label>
      <JFXButton fx:id="btnUpdate" layoutX="574.0" layoutY="162.0" onAction="#btnUpdateOnAction" text="Update" />
    </children>

    <stylesheets>
        <URL value="@../Style/style.css" />
    </stylesheets>

</AnchorPane>
